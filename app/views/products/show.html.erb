<div class="test">
  <div class="product_picture" style="background-image: url('<%= cl_image_path @product.photo %>');">
    <div class="col-10">
      <i class="fas fa-angle-left back_arrow"></i>
    </div>
    <div class="col-2">
      <div id="favorite-action">
        <% if current_user.has_favorited?(@product) %>
          <%= render "favorites/added" %>
        <% else %>
          <%= link_to product_favorites_path(@product), class: "btn-circle", method: :post, remote: true do %>
            <%= inline_svg "plus.svg", width: 39 %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="description_product">
    <h1><%= @product.name %></h1>
    <h2><%= @product.brand.name %></h2>
    <p><%= @product.description %></p>
  </div>
  <div class="rating">
    <h3>Ecological rating 3/5</h3>
    <div class="accordion" id="accordionFirst">

      <div class="water_footprint">
        <div class="collapse-header" data-toggle="collapse" data-target="#collapseOne">
          <div>
            <%= inline_svg("water_icon.svg", width: 32, class: "collapse-icon") %>
            Water footprint
          </div>
          <div class="d-flex align-items-center">
            <%= @product.water_footprint %> â„“
            <div class="mx-2 circle circle-<%= @product.water_score  %>"></div>
            <div class="arrow_down">
              <%= inline_svg "arrow-down.svg", width: 16, height: 8 %>
            </div>
          </div>
        </div>

        <div id="collapseOne" class="collapse">
          <div class="collapse-body">
            Here we can read more about Water footprint
            <p>Water footprint: <%= @product.water_footprint %></p>
          </div>
        </div>
      </div>

      <div class="carbon_footprint">
        <div class="collapse-header" data-toggle="collapse" data-target="#collapseTwo">
          <div>
            <%= inline_svg("plane.svg", width: 32, class: "collapse-icon") %>
            Carbon footprint
          </div>
          <div class="d-flex align-items-center">
            <%= @product.carbon_footprint %> Kg
            <div class="mx-2 circle circle-<%= @product.water_score  %>"></div>
            <div class="arrow_down">
              <%= inline_svg "arrow-down.svg", width: 16, height: 8 %>
            </div>
          </div>
        </div>

        <div id="collapseTwo" class="collapse">
          <div class="collapse-body">
            Here we can read more about Carbon footprint
            <p>Carbon footprint: <%= @product.carbon_footprint %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4 rating">
    <h3>Social rating 3/5</h3>
    <div class="accordion" id="accordionSecond">
      <div class="labour_conditions">
        <div class="collapse-header" data-toggle="collapse" data-target="#collapseThree">
          <div>
            <%= inline_svg("labour.svg", width: 32, class: "collapse-icon") %>
            Labour conditions
          </div>
          <div class="d-flex align-items-center">
            <div class="mx-2 circle circle-<%= @product.water_score  %>"></div>
            <div class="arrow_down">
              <%= inline_svg "arrow-down.svg", width: 16, height: 8 %>
            </div>
          </div>
        </div>

        <div id="collapseThree" class="collapse">
          <div class="collapse-body">
            Here we can read more about Labour conditions
            <p>Labour conditions <%= @product.water_footprint %></p>
          </div>
        </div>
      </div>

      <div class="transparency">
        <div class="collapse-header" data-toggle="collapse" data-target="#collapseFour">
          <div>
            <%= inline_svg("transparency.svg", width: 32, class: "collapse-icon") %>
            Transparency
          </div>
          <div class="d-flex align-items-center">
            <div class="mx-2 circle circle-<%= @product.water_score  %>"></div>
            <div class="arrow_down">
              <%= inline_svg "arrow-down.svg", width: 16, height: 8 %>
            </div>
          </div>
        </div>

        <div id="collapseFour" class="collapse">
          <div class="collapse-body">
            Here we can read more about Transparency
            <p>Transparency: <%= @product.carbon_footprint %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="global_rating">
    <h3>GLOBAL RATING</h3>
  </div>
  <div class="equivalent_product">
    <h4>Better alternatives products</h4>
    <p>slider alternative products</p>
  </div>
</div>

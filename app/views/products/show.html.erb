<div class="test">
  <div class="product_picture">
    <div class="col-10">
      <i class="fas fa-angle-left back_arrow"></i>
    </div>
    <div class="col-2 dressing_btn">
      <div class="bloc-btn">
        <button type="button" name="button"><i class="fas fa-plus"></i></button>
      </div>
    </div>
  </div>
  <div class="description_product">
    <h1><%= @product.name %></h1>
    <h2><%= @product.brand.name %></h2>
    <p><%= @product.description %></p>
  </div>
  <div class="rating">
    <h3>Ecological rating 3/5</h3>
    <div class="accordion" id="accordionExample">
      <div class="card water_footprint">
        <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
          <div class="row">
            <div class="col-2 arrow">
              <i class="fas fa-angle-down"></i>
            </div>
            <div class="col-8">
              <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    Water footprint
                </h5>
                <i class="fas fa-tint"></i>
              </div>
            </div>
            <div class="col-2">
              <div class="circle circle-<%= @product.water_score  %>"></div>
            </div>
          </div>
        </button>

        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
          <div class="card-body">
            Here we can read more about Water footprint
            <p>Water footprint: <%= @product.water_footprint %></p>
          </div>
        </div>
      </div>
      <div class="card carbon_footprint">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          <div class="row">
            <div class="col-2 arrow">
              <i class="fas fa-angle-down"></i>
            </div>
            <div class="col-8">
              <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    Carbon footprint
                </h5>
                <i class="fas fa-plane"></i>
              </div>
            </div>
            <div class="col-2 circle">
              <div class="circle circle-<%= @product.water_score %>"></div>
            </div>
          </div>
        </button>
        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
          <div class="card-body">
            Here we can read more about Carbon footprint
            <p>Carbon Footprin: <%= @product.carbon_footprint %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="rating">
    <h3>Social rating 3/5</h3>
    <div class="accordion" id="accordionExample">
      <div class="card">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
          <div class="row">
            <div class="col-2 arrow">
              <i class="fas fa-angle-down"></i>
            </div>
            <div class="col-8">
              <div class="card-header" id="headingThree">
                <h5 class="mb-0">
                  Labour conditions
                </h5>
                <i class="fas fa-globe"></i>
              </div>
            </div>
            <div class="col-2 circle">
              <div class="circle circle-<%= @product.water_score  %>"></div>
            </div>
          </div>
        </button>
        <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
          <div class="card-body">
            Here we can read more about Labour conditions for the brand
          </div>
        </div>
      </div>
      <div class="card">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
          <div class="row">
            <div class="col-2 arrow">
              <i class="fas fa-angle-down"></i>
            </div>
            <div class="col-8">
              <div class="card-header" id="headingFour">
                <h5 class="mb-0">
                    Transparency
                </h5>
                <i class="fas fa-balance-scale"></i>
              </div>
            </div>
            <div class="col-2 circle">
              <div class="circle circle-<%= @product.water_score  %>"></div>
            </div>
          </div>
        </button>
        <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionExample">
          <div class="card-body">
            Here we can read more about Transparency of the brand
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="global_rating">
    <h3>GLOBAL RATING</h3>
  </div>
  <div class="equivalent_product">
    <h4>Better alternatives products</h4>
    <p>slider alternative products</p>
  </div>
</div>

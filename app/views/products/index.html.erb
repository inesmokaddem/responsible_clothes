<div class="container">
  <%= simple_form_for :search, url: products_path, method: :get, remote: true do |f| %>
    <%= f.input :category_id, collection: Category.all, prompt: "Choose a Category", input_html: { class:"select2", onchange: "Rails.fire(this.form, 'submit')" } %>
    <%= f.input :gender_id, collection: Gender.all, prompt: "Choose a Gender", input_html: { class:"select2", onchange: "Rails.fire(this.form, 'submit')" } %>
    <%= f.input :price_min, as: :hidden %>
    <%= f.input :price_max, as: :hidden %>
    <div id="slider"></div>

  <% end %>

  <%= link_to "Remove filters", products_path, class: "remove-filters d-none" %>
  <div class="row" id="product-list">
    <%= render @products %>
  </div>
</div>

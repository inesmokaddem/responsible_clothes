<div class="container mt-5">
  <%= simple_form_for @product do |f| %>
    <h3 class="mt-4">New Product</h3>
    <%= f.input :ean, as: :hidden %>
    <%= f.input :name, placeholder: 'Leather Jacket' %>
    <%= f.input :description, as: :text, placeholder: 'Blue pant in cotton', input_html: { maxlength: 150 } %>
    <%= f.input :price, as: :currency %>
    <%= f.input :photo, label: "Product picture", input_html: {class:"btn btn-secondary"} %>
    <%= f.input :photo_cache, as: :hidden, input_html: {class:"btn btn-primary"} %>

    <%= f.association :gender, as: :radio_buttons, wrapper: :horizontal_collection_inline %>

    <%= f.association :category, prompt: "Choose a Category", input_html: {class:"select2"} %>
    <%= f.association :brand, prompt: "Choose a Brand", input_html: {class:"select2"} %>
    <div class="add_materials d-flex">
      <%= f.association :material, label: "Materials", prompt: "Choose a Material", input_html: {class:"select2"} %>
      <%= f.input :material, label: "Add the %"%>
    </div>
    <%= f.association :country, label: "Made in", prompt: "Choose a Country", input_html: {class:"select2"} %>

    <%= f.submit 'Create Product', class: "center-wide btn btn-primary", size: 50 %>
  <% end %>
</div>

        <span class="card-brand"><h4><%= product.brand.name %></span>
      </div>
      <div class="card-footer">
        <div class="product_name"><%= product.name %></div>
        <div class="product_price"><%= product.price %> â‚¬</div>
      </div>
    </div>
  <% end %>
</div>

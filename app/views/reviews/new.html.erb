<div class="container">
  <div class="review_container mt-5">
    <h4 class="text-center mb-3">Add your quality rating for the product and your comment</h4>
    <%= simple_form_for [@product, @review] do |f| %>
    <%= f.input :stars %>
    <%= f.input :content %>
    <div class="d-flex justify-content-between">
      <%= link_to 'Back', :back, class:"btn btn-light" %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
</div>

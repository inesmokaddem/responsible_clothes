<div class="picture_bloc text-center pt-5 pb-5">
  <div class="mt-3 avatar_account">
    <%= cl_image_tag @user.avatar.url(:avatar, secure:true), class: "avatar"   %>
  </div>
</div>
<div class="container">
  <div class="mt-4 account_bloc">
    <p><strong>First name:</strong> <%= @user.first_name %></p>
    <p><strong>Last name:</strong> <%= @user.last_name %></p>
    <p><strong>Email:</strong> <%= @user.email %></p>
  </div>
  <%= link_to "Edit my profile", edit_user_path(@user), class: "btn btn-dark p-2" %>
  <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-danger p-2") %>
</div>

<div class="container mt-5 pt-5 text-center avatar_edit">

  <h2 class="mb-4">Edit profile</h2>
  <%= form_for(@user) do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <% if current_user.avatar.url.present? %> <%= image_tag(current_user.avatar.url, class: 'avatar') %>
    <%#= f.label :remove_avatar do %>
      <%#= f.check_box :remove_avatar %>
    <%# end %>
  <% end %>
  <p class="mt-3"><%= f.file_field :avatar %></p>

  <%= f.hidden_field :avatar_cache %>

  <%= f.submit class: 'btn btn-primary p-2 mt-5' %>
  <% end %>


</div>
